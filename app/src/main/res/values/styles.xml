<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="baseLine">
        <item name="android:background">@color/gray_9</item>
    </style>


    <style name="textView" parent="TextAppearance.AppCompat.Widget.Button">


    </style>

    <style name="Theme.Velotracker.StatTextViews">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Velotracker.StatTextViewsValue">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Velotracker.Buttons">

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>

    </style>

    <style name="Theme.Velotracker.Dialogs_TextViews" parent="Theme.AppCompat">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Theme.Velotracker.Dialogs_Buttons" parent="Theme.AppCompat">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/oval_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="MyTabLayoutTheme">
        <item name="android:lines">1</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.Velotracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ForTestThemes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ForTestThemes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>